# Production Environment Variables for Astral Draft
# Copy this file to .env.production and fill in your actual API keys

# SportsData.io API Key (Required for live NFL data)
# Get your key at: https://sportsdata.io/
VITE_SPORTS_DATA_API_KEY=your_actual_sportsdata_api_key_here

# Google Gemini AI API Key (Optional - for AI features)
# Get your key at: https://makersuite.google.com/app/apikey
VITE_GEMINI_API_KEY=your_actual_gemini_api_key_here

# OpenAI API Key (Optional - for advanced AI features)
VITE_OPENAI_API_KEY=your_actual_openai_api_key_here

# Production Feature Flags
VITE_ENABLE_PWA=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ORACLE=true

# Production URLs
VITE_API_BASE_URL=https://your-api-domain.com
VITE_WS_URL=wss://your-api-domain.com

# Environment
NODE_ENV=production
VITE_NODE_ENV=production

# Security Settings
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Optional: Custom Configuration
VITE_APP_NAME="Astral Draft"
VITE_APP_VERSION="2.0.0"
VITE_CONTACT_EMAIL=support@astraldraft.com