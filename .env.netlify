# Netlify-specific Environment Variables
# These are automatically loaded by Netlify during build

# Build Configuration
NODE_VERSION=20
NPM_VERSION=10
NODE_ENV=production
VITE_ENVIRONMENT=production

# Application Configuration
VITE_APP_NAME="Astral Draft"
VITE_APP_VERSION="2.0.0"
VITE_API_BASE_URL="/.netlify/functions/api"
VITE_WEBSOCKET_URL="wss://astraldraft.netlify.app"

# Feature Flags
VITE_ENABLE_PWA=true
VITE_ENABLE_OFFLINE=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_BACKGROUND_SYNC=true
VITE_ENABLE_ORACLE=true

# Performance Configuration
VITE_CACHE_VERSION="v2.0.0"
VITE_DEBUG_MODE=false
VITE_MOCK_DATA=false

# Build Optimization
VITE_BUNDLE_ANALYZER=false
VITE_MINIFY=true
VITE_SOURCEMAP=false

# Security Configuration
VITE_ENABLE_CSP=true
VITE_ENABLE_HTTPS_ONLY=true

# NFL Database Configuration
VITE_NFL_DATABASE_VERSION="2025.1"
VITE_PLAYER_COUNT=1700
VITE_ENABLE_REAL_TIME_UPDATES=true

# AI Features Configuration
VITE_ENABLE_AI_ASSISTANT=true
VITE_ENABLE_TRADE_ANALYZER=true
VITE_ENABLE_INJURY_PREDICTOR=true
VITE_ENABLE_LINEUP_OPTIMIZER=true

# Communication Features
VITE_ENABLE_CHAT=true
VITE_ENABLE_TRASH_TALK=true
VITE_ENABLE_DIRECT_MESSAGES=true
VITE_ENABLE_TRADE_DISCUSSIONS=true

# League Configuration
VITE_DEFAULT_LEAGUE_SIZE=10
VITE_DRAFT_DATE="2025-08-31"
VITE_SEASON_WEEKS=17
VITE_PLAYOFF_WEEKS=3

# API Keys (Set these in Netlify Dashboard - DO NOT COMMIT)
# VITE_OPENAI_API_KEY=
# VITE_GEMINI_API_KEY=
# VITE_SPORTS_DATA_API_KEY=
# VITE_NFL_API_KEY=
# VITE_WEATHER_API_KEY=