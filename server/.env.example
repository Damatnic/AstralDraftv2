# Astral Draft Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:5173

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/astral_draft
REDIS_URL=redis://localhost:6379

# JWT Configuration (Generate with: node -p "require('crypto').randomBytes(64).toString('hex')")
JWT_SECRET=your-secure-jwt-secret-here
JWT_EXPIRES_IN=7d

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@astraldraft.com
FROM_NAME=Astral Draft

# Sports Data API
SPORTSDATA_API_KEY=your-sportsdata-api-key

# AI Services
GEMINI_API_KEY=your-gemini-api-key
OPENAI_API_KEY=your-openai-api-key

# External Services
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/astral-draft.log

# Test/Development Passwords (DO NOT use in production)
VITE_TEST_USER_PASSWORD=your-test-password-here
ADMIN_DEFAULT_PASSWORD=your-admin-password-here