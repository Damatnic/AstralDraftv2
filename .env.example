# ============================================
# Astral Draft Environment Variables
# ============================================
# IMPORTANT: Copy this file to .env and fill in your actual values
# Never commit the .env file with real credentials to version control!
# ============================================

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Neon PostgreSQL Connection String (Required for Production)
# Get from: https://console.neon.tech/app/projects
DATABASE_URL=postgresql://neondb_owner:your_password@ep-your-project.region.aws.neon.tech/neondb?sslmode=require&channel_binding=require

# ============================================
# FRONTEND API KEYS (VITE_ prefix required)
# ============================================
# Google Gemini AI API Key (Required)
# Get from: https://makersuite.google.com/app/apikey
VITE_GEMINI_API_KEY=AIzaSyD-xxxxxxxxxxxxxxxxxxxxxxxxx

# Sports.io API Key (Required for live data)
# Get from: https://sportsdata.io/ (sign up for NFL API)
VITE_SPORTS_IO_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ESPN API Key (Optional - requires partnership approval)
# Apply at: https://www.espn.com/apis/devcenter/
VITE_ESPN_API_KEY=

# NFL Official API Key (Optional - requires approval)
# Apply at: https://developer.nfl.com/
VITE_NFL_API_KEY=

# The Odds API Key (Optional - for betting lines)
# Get from: https://the-odds-api.com/
VITE_ODDS_API_KEY=

# ============================================
# AUTHENTICATION & SECURITY (Required)
# ============================================
# JWT Secret (Generate: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=your_64_character_jwt_secret_minimum_32_chars_required_change_in_production

# Refresh Token Secret (Generate same as JWT_SECRET but use different value)
REFRESH_TOKEN_SECRET=your_64_character_refresh_token_secret_use_different_value_from_jwt

# Session Secret (Generate same as JWT_SECRET but use different value)
SESSION_SECRET=your_64_character_session_secret_use_different_value_from_others

# Encryption Key (Must be exactly 32 characters)
# Generate: node -e "console.log(require('crypto').randomBytes(16).toString('hex'))"
ENCRYPTION_KEY=your_32_character_encryption_key

# CSRF Protection Secret
CSRF_SECRET=your_csrf_secret_here_change_in_production

# Cookie Secret
COOKIE_SECRET=your_cookie_secret_here_change_in_production

# ============================================
# JWT CONFIGURATION
# ============================================
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ============================================
# NETLIFY DEPLOYMENT (Required for CI/CD)
# ============================================
# Netlify Auth Token
# Get from: Netlify → User Settings → Applications → New access token
NETLIFY_AUTH_TOKEN=nfp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Netlify Site ID
# Get from: Netlify → Site Settings → General → Site ID
NETLIFY_SITE_ID=12345678-1234-1234-1234-123456789012

# ============================================
# APPLICATION CONFIGURATION
# ============================================
# Environment (development, production, test)
NODE_ENV=production
VITE_NODE_ENV=production

# Server Port (Backend)
PORT=3001
HOST=localhost

# API URLs (Update for production)
VITE_API_BASE_URL=https://astraldraft.netlify.app
VITE_WEBSOCKET_URL=wss://astraldraft.netlify.app

# ============================================
# SECURITY SETTINGS
# ============================================
# Password Hashing
BCRYPT_SALT_ROUNDS=12
MIN_PASSWORD_LENGTH=8

# Rate Limiting
MAX_AUTH_ATTEMPTS=5
AUTH_LOCKOUT_DURATION=900000

# ============================================
# FEATURE FLAGS
# ============================================
# Enable/Disable Features
VITE_ENABLE_LIVE_DATA=true
VITE_ENABLE_VOICE_COMMANDS=true
VITE_ENABLE_AI_ORACLE=true
ENABLE_AI_FEATURES=true
ENABLE_PAYMENTS=false
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=false

# ============================================
# OPTIONAL: PAYMENT INTEGRATION
# ============================================
# Stripe API Keys (if enabling payments)
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ============================================
# OPTIONAL: EMAIL SERVICE
# ============================================
# SendGrid, Mailgun, or other email service
EMAIL_SERVICE_API_KEY=
EMAIL_FROM_ADDRESS=noreply@astraldraft.com

# ============================================
# OPTIONAL: MONITORING & ANALYTICS
# ============================================
# Sentry Error Tracking
# Get from: https://sentry.io/
SENTRY_DSN=

# Google Analytics
# Get from: https://analytics.google.com/
VITE_GA_TRACKING_ID=

# ============================================
# GITHUB ACTIONS SECRETS (Add to GitHub Settings)
# ============================================
# These are referenced in .github/workflows/ files
# Add to: Settings → Secrets and variables → Actions
#
# Required GitHub Secrets:
# - NETLIFY_AUTH_TOKEN (same as above)
# - NETLIFY_SITE_ID (same as above)
# - VITE_GEMINI_API_KEY (same as above)
# - VITE_SPORTS_IO_API_KEY (same as above)
# - VITE_ESPN_API_KEY (optional)
# - VITE_NFL_API_KEY (optional)
# - VITE_ODDS_API_KEY (optional)
# - DATABASE_URL (same as above)
# - JWT_SECRET (same as above)
# - REFRESH_TOKEN_SECRET (same as above)
# - SESSION_SECRET (same as above)
# - ENCRYPTION_KEY (same as above)
#
# Optional GitHub Secrets (for advanced deployment):
# - PRODUCTION_HOST (if using custom server)
# - PRODUCTION_USER (if using custom server)
# - PRODUCTION_SSH_KEY (if using custom server)
# - STAGING_HOST (if using staging server)
# - STAGING_USER (if using staging server)
# - STAGING_SSH_KEY (if using staging server)
# - SLACK_WEBHOOK_URL (for deployment notifications)

# ============================================
# NOTES FOR NETLIFY SETUP
# ============================================
# 1. Add all VITE_ prefixed variables to Netlify Environment Variables
# 2. Add backend secrets (JWT_SECRET, DATABASE_URL, etc.) to Netlify
# 3. Ensure build command is: npm run build:prod
# 4. Publish directory should be: dist
# 5. Functions directory should be: netlify/functions
# ============================================